SQL Table Creation (Directly from team document)
-- 1. Create the Bank table
CREATE TABLE Bank (
	BankID NUMBER PRIMARY KEY,
	Name VARCHAR2(100) NOT NULL,
	Location VARCHAR2(100)
);

-- 2. Create the Customer table
CREATE TABLE Customer (
	CustomerID NUMBER PRIMARY KEY,
	FirstName VARCHAR2(50) NOT NULL,
	LastName VARCHAR2(50) NOT NULL,
	Birthday DATE NOT NULL,
	Username VARCHAR2(50) UNIQUE NOT NULL,
	Password VARCHAR2(100) NOT NULL,
	DateCreated DATE DEFAULT SYSDATE
);

-- 3. Create the Employee table
CREATE TABLE Employee (
	EmployeeID NUMBER PRIMARY KEY,
	FirstName VARCHAR2(50) NOT NULL,
	LastName VARCHAR2(50) NOT NULL,
	Position VARCHAR2(20) CHECK (Position IN ('Manager', 'Teller', 'Clerk')),
	StartDate DATE DEFAULT SYSDATE,
	Birthday DATE,
	USERNAME VARCHAR2(50) UNIQUE NOT NULL,
	PASSWORD VARCHAR2(50) NOT NULL
);

-- 4. Create the Accounts table
CREATE TABLE Accounts (
	AccountID NUMBER PRIMARY KEY,
	UserID NUMBER NOT NULL,
	AccountType VARCHAR2(20) CHECK (AccountType IN ('CHECKING','SAVINGS')),
	Balance NUMBER(10,2) DEFAULT 0 CHECK (Balance >= 0),
	DateOpened DATE DEFAULT SYSDATE,
	FOREIGN KEY (UserID) REFERENCES Customer(CustomerID)
);

-- 5. Create the Transactions table
CREATE TABLE Transactions (
	TransactionID NUMBER PRIMARY KEY,
	AccountID NUMBER NOT NULL,
    TransactionType VARCHAR2(20) CHECK (TransactionType IN ('DEPOSIT','WITHDRAW','TRANSFER')),
    Amount NUMBER(10,2) CHECK (Amount > 0),
    TransactionDate DATE DEFAULT SYSDATE,
	FOREIGN KEY (AccountID) REFERENCES Accounts(AccountID)
);

-- 6. Create the Cards table
CREATE TABLE Cards (
	CARDID NUMBER PRIMARY KEY,
	CustomerID NUMBER NOT NULL,
	CardType VARCHAR2(20) CHECK (CardType IN ('DEBIT','CREDIT')),
	FOREIGN KEY (CustomerID) REFERENCES Customer(CustomerID)
);

-- Commit the structural changes
COMMIT;

-- Ones I used for test, which align with entities

CREATE TABLE ACCOUNTS (
    ACCOUNTID   NUMBER GENERATED ALWAYS AS IDENTITY PRIMARY KEY,
    USERID      NUMBER          NOT NULL,
    ACCOUNTTYPE VARCHAR2(20),
    BALANCE     NUMBER(18,2)    DEFAULT 0 CHECK (BALANCE >= 0),
    DATEOPENED  DATE
);
CREATE TABLE EMPLOYEE (
    EMPLOYEEID  NUMBER GENERATED ALWAYS AS IDENTITY PRIMARY KEY,
    FIRSTNAME   VARCHAR2(50),
    LASTNAME    VARCHAR2(50),
    POSITION    VARCHAR2(20)
                CHECK (POSITION IN ('Manager', 'Teller', 'Clerk')),
    STARTDATE   DATE,
    BIRTHDAY    DATE,
    USERNAME    VARCHAR2(50) UNIQUE NOT NULL,
    PASSWORD    VARCHAR2(255) NOT NULL
);
CREATE TABLE TRANSACTIONS (
    TRANSACTIONID   NUMBER GENERATED ALWAYS AS IDENTITY PRIMARY KEY,
    ACCOUNTID       NUMBER NOT NULL,
    TRANSACTIONTYPE VARCHAR2(20)
                    CHECK (TRANSACTIONTYPE IN ('DEPOSIT', 'WITHDRAWAL', 'TRANSFER')),
    AMOUNT          NUMBER(18,2) NOT NULL CHECK (AMOUNT > 0),
    DESCRIPTION     VARCHAR2(255),
    TRANSACTIONDATE TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    CONSTRAINT FK_TRANSACTIONS_ACCOUNT
        FOREIGN KEY (ACCOUNTID)
        REFERENCES ACCOUNTS(ACCOUNTID)
);
CREATE TABLE CUSTOMER (
    CUSTOMERID  NUMBER GENERATED ALWAYS AS IDENTITY PRIMARY KEY,
    FIRSTNAME   VARCHAR2(50),
    LASTNAME    VARCHAR2(50),
    USERNAME    VARCHAR2(50) UNIQUE NOT NULL,
    PASSWORD    VARCHAR2(255) NOT NULL,
    BIRTHDAY    DATE,
    DATECREATED DATE DEFAULT SYSDATE
);

COMMIT;

